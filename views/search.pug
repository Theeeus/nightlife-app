doctype html
html
  head
    meta(charset='utf-8')
    meta(name='language', content='en-US')
    meta(name='author', content='Matheus Alves')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='canonical', href='https://remembar.herokuapp.com/')
    title Bars in #{city} | remembar
    meta(name='description', content='Find bars in '+city)
    meta(property='og:type', content='website')
    meta(property='og:title', content='Bars in '+city+' | remembar')
    meta(property='og:description', content='Find bars in '+city+' and save them for the next time you go there.')
    meta(property='og:url', content='https://remembar.herokuapp.com/city/'+city)
    meta(property='og:site_name', content='remembar | bars in '+city)
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
    link(rel='stylesheet', href='/css/style.css')
    script(src="https://use.fontawesome.com/a23e082358.js")
  body
    script.
      var data = '!{data}';
      var auth = '!{auth}';
      var user = '!{user}';
    - if (!auth) {
      .navbarInner
        .navbarLeft.pull-left
          a.logo(href='/')
            img(src='/assets/nightlife-icon.png')
            span.hidden-xs REMEMBAR
        .navbarRight.pull-right.nrInner
          a.btn.btn-primary(href='/auth/facebook')
            i.fa.fa-facebook
            span.hidden-xs Sign in with Facebook
    - } else {
      #navbarAuth.navbarInner
        .navbarLeft.pull-left
          a.logo(href='/')
            img(src='/assets/nightlife-icon.png')
            | REMEMBAR
        .navbarRight.pull-right
          a.btn.btn-danger.logoutBtn(href='/logout') Logout
    - }
    <form class="searchBarInner" action="/search" method="post">
      <input class="searchInputInner" type="text" name="query" placeholder="Search by city name..." />
      <input class="searchSubmitInner btn btn-primary" type="submit" value="SEARCH" />
    </form>
